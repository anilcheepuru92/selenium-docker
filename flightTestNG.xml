<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="flight booking module">
	<test name="book flight for 2 passengers">
		<parameter name="passengerCount" value="2" />
		<parameter name="expectedPrice" value="$89 USD" />
		<classes>
			<class name="com.newtours.tests.BookFlightTest" />
		</classes>
	</test>
	
	<test name="book flight for 3 passengers">
		<parameter name="passengerCount" value="3" />
		<parameter name="expectedPrice" value="$133 USD" />
		<classes>
			<class name="com.newtours.tests.BookFlightTest" />
		</classes>
	</test>
	
	<test name="book flight for 1 passenger">
		<parameter name="passengerCount" value="1" />
		<parameter name="expectedPrice" value="$44 USD" />
		<classes>
			<class name="com.newtours.tests.BookFlightTest" />
		</classes>
	</test>
	
	<test name="book flight for 4 passengers">
		<parameter name="passengerCount" value="4" />
		<parameter name="expectedPrice" value="$178 USD" />
		<classes>
			<class name="com.newtours.tests.BookFlightTest" />
		</classes>
	</test>
	
</suite>